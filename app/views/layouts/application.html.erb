<!DOCTYPE html>
<html>
  <head>
    <title>Testsecurity</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<% if user_signed_in? %>	
  		<p><%= link_to "Salir", destroy_user_session_path, method: :delete %></p>
	<% else %>
		<a href="<%= new_user_session_path %>" data-no-turbolink="true">Ingresar</a>
  	<% end %>

  	<%= yield %>
  </body>
</html>
